{
  "extends": "./../../tsconfig.json",
  "angularCompilerOptions": {
    "strictTemplates": false,
    "fullTemplateTypeCheck": false
  },
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
